###############
# Ansible generated config, will be overwritten!
###############

###############
# General
###############

{% if lo is defined %}
auto lo
iface lo inet loopback
   address {{ lo }}
{% endif %}

auto eth0
iface eth0 inet dhcp
  vrf mgmt

auto mgmt
iface mgmt
  address 127.0.0.1/8
  vrf-table auto

{% if ospf is defined %}
###############
# OSPF ports
###############

{% for port in ospf -%}
auto {{ port }}
iface {{ port }}
  address {{ ospf[port]["router-address"] }}
  mtu 1500

{% endfor %}
{% endif %}
