###############
# Ansible generated config, will be overwritten!
###############

###############
# General
###############

{% if lo is defined %}
auto lo
iface lo inet loopback
   address {{ lo }}/32
{% endif %}

auto eth0
iface eth0 inet dhcp
  vrf mgmt

auto mgmt
iface mgmt
  address 127.0.0.1/8
  vrf-table auto

{% if bridge is defined %}
###############
# Bridge / Vlans
###############

auto bridge
iface bridge
  bridge-vlan-aware yes
  bridge-ports {{ aggregation_ports | join(" ") }}{% if mlag is defined %} peerlink{% endif %}
  bridge-vids {{ vlans | sort | join(" ") }} {% if svi is defined %}{% for vlan in svi -%}{{ vlan }}{% endfor %}{% endif %}{% if ospf is defined %}{% for port in ospf -%}{% if ospf[port]["vlan"] is defined %} {{}

  bridge-stp on
{% if bridge["priority"] is defined %}
  mstpctl-treeprio {{ bridge["priority"] }}
{% endif %}
{% endif %}

{% if mlag is defined %}
###############
# MLAG
###############

auto peerlink
iface peerlink
  bond-slaves {{ mlag["members"] | join(" ") }}
  mtu 9216

auto peerlink.4094
iface peerlink.4094
  address {{ mlag["address"] }}
  clagd-peer-ip {{ mlag["peer-ip"] }}
  clagd-backup-ip {{ mlag["backup-ip"] }} vrf mgmt
  clagd-sys-mac {{ mlag["sysmac"] }}
  {% if mlag["priority"] is defined %}
  clagd-priority {{ mlag["priority"] }}
  {% endif %}
  clagd-args --initDelay 180
{% endif %}

{% if aggregation_ports is defined %}
####################
# Aggregation ports
####################

{% for port in aggregation_ports -%}

{% if aggregation_ports[port]["mlag"] is defined %}
{% for member in aggregation_ports[port]["members"] -%}
auto {{ member }}
iface {{ member }}
{% endfor %}
{% endif %}

auto {{ port }}
iface {{ port }}
  mtu 9000
  {% if aggregation_ports[port]["alias"] is defined %}
  alias {{ aggregation_ports[port]["alias"] }}
  {% endif %}
  {% if aggregation_ports[port]["mlag"] is defined %}
  clag-id {{ aggregation_ports[port]["mlag-id"] }}
  bond-slaves {{ aggregation_ports[port]["members"] | join(" ") }}
  {% endif %}
  {% if aggregation_ports[port]["trunk"] %}
  bridge-vids {{ vlans | sort | join(" ") }}
  {% else %}
  bridge-access {{ aggregation_ports[port]["vlan"] }}
  {% endif %}

{% endfor %}
{% endif %}

{% if svi is defined %}
###############
# SVIs
###############

{% for vlan in svi -%}
auto vlan{{vlan}}
iface vlan{{vlan}}
  address {{svi[vlan]["ipv4"]}}
  vlan-id {{vlan}}
  vlan-raw-device bridge
  address-virtual 00:00:5e:00:01:01 {{svi[vlan]["ipv4-virtual"]}}
{% endfor %}
{% endif %}

{% if ospf is defined %}
###############
# OSPF ports
###############

{% for port in ospf -%}
auto {{ port }}
iface {{ port }}
  {% if ospf[port]["vlan"] is defined %}
  address {{ ospf[port]["router-address"] }}
  vlan-id {{ ospf[port]["vlan"] }}
  vlan-raw-device bridge
  {% else %}
  address {{ ospf[port]["router-address"] }}
  {% endif %}
  {% if ospf[port]["mtu"] is defined %}
  mtu {{ ospf[port]["mtu"] }}
  {% else %}
  mtu 1500
  {% endif %}

{% endfor %}
{% endif %}
